<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/linear1"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">
        <ImageView
            android:id="@+id/imageView"
            android:layout_marginStart="10dp"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/baseline_arrow_back_24"
            app:tint="@color/Black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="50dp"
            android:fontFamily="sans-serif-black"
            android:text="@string/profile"
            android:textColor="@color/Black"
            android:textSize="50sp" />
        <ImageView
            android:id="@+id/imageView2"
            android:layout_marginStart="75dp"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/sharp_edit_square_24" />



    </LinearLayout>

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/profile"
        android:background="@drawable/baseline_circle_24"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="90dp"
        tools:ignore="MissingConstraints"
        android:contentDescription="Profile Picture" />

    <TextView
        android:id="@+id/profileName"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="148dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.765"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linear1" />

    <Button
        android:id="@+id/btnUpdatePicture"
        android:layout_width="164dp"
        android:layout_height="41dp"
        android:layout_marginTop="80dp"
        android:backgroundTint="#67A4EA"
        android:text="Update Picture"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintTop_toBottomOf="@id/profileName"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/btnRemovePicture"
        android:layout_width="178dp"
        android:layout_height="45dp"
        android:layout_marginTop="76dp"
        android:text="Remove Picture"
        android:backgroundTint="#67A4EA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.768"
        app:layout_constraintStart_toEndOf="@id/btnUpdatePicture"
        app:layout_constraintTop_toBottomOf="@id/profileName" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/userInfoLayout"
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:background="#B9B8B8"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnUpdatePicture"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/user_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:padding="5dp"
            android:text="@string/user_info"
            android:textColor="@color/Black"
            android:textSize="25dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Name"
            app:layout_constraintTop_toBottomOf="@+id/user_info"
            tools:layout_editor_absoluteX="25dp" />

        <TextView
            android:id="@+id/profileName1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="168dp"
            android:layout_marginTop="24dp"
            android:padding="8dp"
            app:layout_constraintLeft_toRightOf="@+id/name"
            app:layout_constraintTop_toBottomOf="@+id/user_info" />

        <TextView
            android:id="@+id/contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Contact"
            app:layout_constraintTop_toBottomOf="@+id/name"
            tools:layout_editor_absoluteX="25dp" />

        <TextView
            android:id="@+id/contact1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="156dp"
            android:layout_marginTop="4dp"
            android:padding="8dp"
            app:layout_constraintLeft_toRightOf="@+id/contact"
            app:layout_constraintTop_toBottomOf="@+id/profileName1" />

        <TextView
            android:id="@+id/geolocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Geolocation Track"
            app:layout_constraintTop_toBottomOf="@+id/contact"
            tools:layout_editor_absoluteX="25dp" />

        <Switch
            android:id="@+id/geoswitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="4dp"
            app:layout_constraintLeft_toRightOf="@+id/geolocation"
            app:layout_constraintTop_toBottomOf="@+id/contact1"
            tools:ignore="UseSwitchCompatOrMaterialXml" />
        <TextView
            android:id="@+id/homepage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Homepage"
            app:layout_constraintTop_toBottomOf="@+id/geolocation"
            tools:layout_editor_absoluteX="25dp" />

        <TextView
            android:id="@+id/homepage1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="136dp"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            app:layout_constraintLeft_toRightOf="@+id/homepage"
            app:layout_constraintTop_toBottomOf="@+id/geoswitch" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/JordyBlue">


        <ImageButton
            android:id="@+id/qrButton"
            android:layout_width="118dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:paddingHorizontal="5dp"
            android:paddingVertical="5dp"
            android:background="@drawable/buttonselect"
            app:srcCompat="@drawable/qrcode"
            app:tint="@android:color/black" />

        <ImageButton
            android:id="@+id/calenderButton"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:background="@drawable/buttonselect"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp"
            app:srcCompat="@drawable/calender"
            app:tint="@android:color/black" />

        <ImageButton
            android:id="@+id/addCalenderButton"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp"
            android:background="@drawable/buttonselect"
            app:srcCompat="@drawable/addcalender"
            app:tint="@android:color/black" />

        <ImageButton
            android:id="@+id/profileButton"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:paddingHorizontal="5dp"
            android:paddingVertical="5dp"
            android:background="@drawable/buttonselect"
            app:srcCompat="@drawable/profile"
            app:tint="@android:color/black" />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>