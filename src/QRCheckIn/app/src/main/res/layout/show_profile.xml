<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/linear1"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">
        <ImageView
            android:id="@+id/imageView"
            android:layout_marginStart="10dp"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/baseline_arrow_back_24"
            app:tint="@color/Black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="50dp"
            android:fontFamily="sans-serif-black"
            android:id="@+id/profile1"
            android:text="@string/profile"
            android:textColor="@color/Black"
            android:textSize="50sp" />
        <ImageView
            android:id="@+id/imageView2"
            android:layout_marginStart="75dp"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/sharp_edit_square_24" />



    </LinearLayout>

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:contentDescription="@string/profile_picture"
        app:layout_constraintTop_toBottomOf="@+id/linear1"
        app:srcCompat="@drawable/profile"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/profileName"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="108dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.726"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linear1" />

    <Button
        android:id="@+id/btnUpdatePicture"
        android:layout_width="164dp"
        android:layout_height="41dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="36dp"
        android:backgroundTint="#67A4EA"
        android:text="Update Picture"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintTop_toBottomOf="@id/imageView6"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="32dp" />

    <Button
        android:id="@+id/btnRemovePicture"
        android:layout_width="164dp"
        android:layout_height="41dp"
        android:layout_marginTop="124dp"
        android:backgroundTint="#67A4EA"
        android:text="Remove Picture"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.392"
        app:layout_constraintStart_toEndOf="@id/btnUpdatePicture"
        app:layout_constraintTop_toBottomOf="@id/profileName" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/userInfoLayout"
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:background="#B9B8B8"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/btnUpdatePicture"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/user_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:padding="5dp"
            app:layout_constraintTop_toTopOf="@+id/linear1"
            android:text="@string/user_info"
            android:textColor="@color/Black"
            android:textSize="25dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Name"
            app:layout_constraintTop_toBottomOf="@+id/user_info"
            tools:layout_editor_absoluteX="25dp" />

        <TextView
            android:id="@+id/profileName1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="168dp"
            android:layout_marginTop="24dp"
            android:padding="8dp"
            app:layout_constraintLeft_toRightOf="@+id/name"
            app:layout_constraintTop_toBottomOf="@+id/user_info" />

        <TextView
            android:id="@+id/contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Contact"
            app:layout_constraintTop_toBottomOf="@+id/name"
            tools:layout_editor_absoluteX="25dp" />

        <TextView
            android:id="@+id/contact1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="156dp"
            android:layout_marginTop="4dp"
            android:padding="8dp"
            app:layout_constraintLeft_toRightOf="@+id/contact"
            app:layout_constraintTop_toBottomOf="@+id/profileName1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/geolocation"
            android:layout_marginTop="20dp"
            android:text="Geolocation Track"
            app:layout_constraintTop_toBottomOf="@+id/contact"
            tools:layout_editor_absoluteX="25dp"
            tools:ignore="MissingConstraints" />

        <Switch
            android:id="@+id/geoswitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="4dp"
            app:layout_constraintLeft_toRightOf="@+id/geolocation"
            app:layout_constraintTop_toBottomOf="@+id/contact1"
            tools:ignore="UseSwitchCompatOrMaterialXml" />
        <TextView
            android:id="@+id/homepage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/homepage"
            app:layout_constraintTop_toBottomOf="@+id/geolocation"
            tools:layout_editor_absoluteX="25dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/homepage1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="136dp"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            app:layout_constraintLeft_toRightOf="@+id/homepage"
            app:layout_constraintTop_toBottomOf="@+id/geoswitch" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <include
        layout="@layout/mainappbar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />



</androidx.constraintlayout.widget.ConstraintLayout>